{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "ban-types", "require-await", "no-unused-vars", "no-inferrable-types"]
    }
  }
}
